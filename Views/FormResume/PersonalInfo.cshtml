@model RiwiEmplea.Dtos.Users.UsersDTO

@{
    ViewData["Title"] = "Personal Info User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Registro</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/personalInfo.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-left">Formulario de Registro</h2>
        <form asp-action="Submit" method="post" enctype="multipart/form-data" class="form-data">

            <!-- Información Personal -->
            <h3 class="w-auto text-center">Información Personal</h3>
            <div id="personalInformationContainer" class="mb-3">
                <div class="personal-Information-group border p-5">

                    <!-- Foto -->
                    <div class="form-group photo-container">
                        <label class="label-photo">Foto</label>
                        <input type="file" class="-file d-none" id="photo" name="photo">
                        <label class="custom-file-upload" for="photo">
                            <i class="fa fa-plus"></i> 
                        </label>
                    </div>

                    <div class="container-personal-info-right">
                        <!-- Nombre -->
                        <div class="form-group input-group">
                            <input type="text" class="" id="name" name="name" placeholder="Nombre">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-edit"></i></span>
                            </div>
                        </div>

                        <!-- Fecha de nacimiento -->
                        <div class="form-group input-group">
                            <input type="date" class="" id="birthDate" name="birthDate" required>
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-edit"></i></span>
                            </div>
                        </div>

                        <!-- Ciudad -->
                        <div class="form-group input-group">
                            <input type="text" class="" id="city" name="city" placeholder="Ciudad" required>
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-edit"></i></span>
                            </div>
                        </div>

                        <!-- Correo -->
                        <div class="form-group input-group">
                            <input type="email" class="" id="email" name="email" placeholder="Correo" required>
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-edit"></i></span>
                            </div>
                        </div>

                        <!-- Celular -->
                        <div class="form-group input-group">
                            <input type="tel" class="" id="phone" name="phone" placeholder="Celular" required>
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-edit"></i></span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- Sobre Mi - Perfil -->
            <div class="profile-description-group border p-5 mb-3 mt-3">
                <div class="form-group profile-group">
                    <label for="profile">Sobre Mi - Perfil</label>
                    <div class="container-group-profile">
                        <textarea class="" id="profile" name="profile" rows="3"></textarea>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-primary mt-3 mb-3" onclick="addPersonalData()">Agregar Información Personal</button>

            <!-- Experiencias Profesionales -->
            <h3 class="text-center">Experiencias Profesionales</h3>
            <div id="professionalExperienceContainer">
                <div class="experience-group border p-5 mb-3">
                    <div class="form-group input-group">
                        <input type="text" class="" id="company" name="experience[0].company" placeholder="Compañía" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <input type="text" class="" id="position" name="experience[0].position" placeholder="Cargo" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <input type="date" class="" id="startDate" name="experience[0].startDate" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <input type="date" class="" id="endDate" name="experience[0].endDate">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group description-container">
                        <label for="description">Descripción</label>
                        <textarea class="" id="description" name="experience[0].description" rows="3"></textarea>
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-primary mt-3 mb-3" onclick="addExperience()">Agregar Experiencia</button>

            <!-- Formación Educativa -->
            <h3 class="text-center">Formación Educativa</h3>
            <div id="educationContainer">
                <div class="education-group border p-5 mb-3">
                    <div class="form-group input-group">
                        <input type="text" class="" id="institution" name="education[0].institution" placeholder="Institución" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <input type="text" class="" id="degree" name="education[0].degree" placeholder="Título" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <input type="date" class="" id="eduStartDate" name="education[0].startDate" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <input type="date" class="" id="eduEndDate" name="education[0].endDate">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group description-container">
                        <label for="eduDescription">Descripción</label>
                        <textarea class="" id="eduDescription" name="education[0].description" rows="3"></textarea>
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-primary mt-3 mb-3" onclick="addEducation()">Agregar Educación</button>

            <!-- Competencias Humanas -->
            <h3 class="text-center">Competencias Humanas</h3>
            <div id="softSkillsContainer">
                <div class="skill-group border p-5 mb-3">
                    <div class="form-group input-group">
                        <input type="text" class="" id="softSkill" name="softSkills[0].skill" placeholder="Habilidad" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <select class="" id="softSkillLevel" name="softSkills[0].level" required>
                            <option value="Basico">Básico</option>
                            <option value="Intermedio">Intermedio</option>
                            <option value="Avanzado">Avanzado</option>
                        </select>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-primary mt-3 mb-3" onclick="addSoftSkill()">Agregar Habilidad Humana</button>

            <!-- Competencias Técnicas -->
            <h3 class="text-center">Competencias Técnicas</h3>
            <div id="techSkillsContainer">
                <div class="skill-group border p-5 mb-3">
                    <div class="form-group input-group">
                        <input type="text" class="" id="techSkill" name="techSkills[0].skill" placeholder="Habilidad" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <select class="" id="techSkillLevel" name="techSkills[0].level" required>
                            <option value="Basico">Básico</option>
                            <option value="Intermedio">Intermedio</option>
                            <option value="Avanzado">Avanzado</option>
                        </select>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-primary mt-3 mb-3" onclick="addTechSkill()">Agregar Habilidad Técnica</button>

            <!-- Botón de envío del formulario -->
            <div class="form-group text-center mt-5 mb-5">
                <button type="submit" class="btn btn-success">Enviar</button>
            </div>
        </form>
    </div>
    <script>
        // JavaScript (personalInfo.js)

        // Contador para las experiencias profesionales
        let experienceCount = 1;
        // Contador para la formación educativa
        let educationCount = 1;
        // Contador para las competencias humanas
        let softSkillCount = 1;
        // Contador para las competencias técnicas
        let techSkillCount = 1;

        // Función para añadir una nueva sección de experiencia profesional
        function addExperience() {
            let container = document.getElementById('professionalExperienceContainer');
            let newExperience = `
                <div class="experience-group border p-5 mb-3 mt-3">
                    <div class="form-group input-group">
                        <input type="text" class="form-control" id="company_${experienceCount}" name="experience[${experienceCount}].company" placeholder="Compañía" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <input type="text" class="form-control" id="position_${experienceCount}" name="experience[${experienceCount}].position" placeholder="Cargo" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <input type="date" class="form-control" id="startDate_${experienceCount}" name="experience[${experienceCount}].startDate" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <input type="date" class="form-control" id="endDate_${experienceCount}" name="experience[${experienceCount}].endDate">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description_${experienceCount}">Descripción</label>
                        <textarea class="form-control" id="description_${experienceCount}" name="experience[${experienceCount}].description" rows="3"></textarea>
                    </div>
                </div>`;
            container.insertAdjacentHTML('beforeend', newExperience);
            experienceCount++;
        }

        // Función para añadir una nueva sección de formación educativa
        function addEducation() {
            let container = document.getElementById('educationContainer');
            let newEducation = `
                <div class="education-group border p-5 mb-3 mt-3">
                    <div class="form-group input-group">
                        <input type="text" class="form-control" id="institution_${educationCount}" name="education[${educationCount}].institution" placeholder="Institución" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <input type="text" class="form-control" id="degree_${educationCount}" name="education[${educationCount}].degree" placeholder="Título" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <input type="date" class="form-control" id="eduStartDate_${educationCount}" name="education[${educationCount}].startDate" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <input type="date" class="form-control" id="eduEndDate_${educationCount}" name="education[${educationCount}].endDate">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="eduDescription_${educationCount}">Descripción</label>
                        <textarea class="form-control" id="eduDescription_${educationCount}" name="education[${educationCount}].description" rows="3"></textarea>
                    </div>
                </div>`;
            container.insertAdjacentHTML('beforeend', newEducation);
            educationCount++;
        }

        // Función para añadir una nueva competencia humana
        function addSoftSkill() {
            let container = document.getElementById('softSkillsContainer');
            let newSoftSkill = `
                <div class="skill-group border p-5 mb-3 mt-3">
                    <div class="form-group input-group">
                        <input type="text" class="form-control" id="softSkill_${softSkillCount}" name="softSkills[${softSkillCount}].skill" placeholder="Habilidad" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <select class="form-control" id="softSkillLevel_${softSkillCount}" name="softSkills[${softSkillCount}].level" required>
                            <option value="Basico">Básico</option>
                            <option value="Intermedio">Intermedio</option>
                            <option value="Avanzado">Avanzado</option>
                        </select>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                </div>`;
            container.insertAdjacentHTML('beforeend', newSoftSkill);
            softSkillCount++;
        }

        // Función para añadir una nueva competencia técnica
        function addTechSkill() {
            let container = document.getElementById('techSkillsContainer');
            let newTechSkill = `
                <div class="skill-group border p-5 mb-3 mt-3">
                    <div class="form-group input-group">
                        <input type="text" class="form-control" id="techSkill_${techSkillCount}" name="techSkills[${techSkillCount}].skill" placeholder="Habilidad" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                    <div class="form-group input-group">
                        <select class="form-control" id="techSkillLevel_${techSkillCount}" name="techSkills[${techSkillCount}].level" required>
                            <option value="Basico">Básico</option>
                            <option value="Intermedio">Intermedio</option>
                            <option value="Avanzado">Avanzado</option>
                        </select>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                    </div>
                </div>`;
            container.insertAdjacentHTML('beforeend', newTechSkill);
            techSkillCount++;
        }

    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
    <script src="~/js/personalInfo.js"></script>
</body>
</html>
