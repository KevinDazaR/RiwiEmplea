@using PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<RiwiEmplea.Models.User>
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
        crossorigin="anonymous">
    <style>
        html,
        body {
            height: 100%;
            margin: 0;
        }

    using PagedList;

        .container-flex {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
        @*background-color:#f8f9fa;border:1pxsolid#dee2e6;*@
        }

        .header .user-info {
            font-size: 1.25rem;
        }

        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .carousel {
            width: 50%;
        }

        .btn-primary {
            color: #fff;
            background-color: #171E4A;
        }
    </style>
</head>

<body class="sb-nav-fixed">
    <div class="container-flex">
        <header class="header">
            <div class="user-info">
                Â¡Hola, @User.Identity.Name! ðŸ‘‹
            </div>
            <div class="date-info">
                Bienvenido, hoy es @DateTime.Now.ToString("dd/MM/yyyy")
            </div>
        </header>
        <main class="main-content">
            
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-warning">@ViewBag.Message</div>
            }
            else
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>
                                        <a href="#" class="btn btn-primary">Info</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">No data available</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="d-flex justify-content-center">
                    @* @Html.PagedListPager(Model, page => Url.Action("Index", new { pageNumber = page })) *@
                </div>
            }
             
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
</body>

</html>
